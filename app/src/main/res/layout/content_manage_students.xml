<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="verbventures.frontend.ManageStudentsActivity"
    tools:showIn="@layout/activity_manage_students">

    <ListView
        android:id="@+id/student_list"
        android:layout_width="440dp"
        android:layout_height="759dp"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="45dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/startSessionButton"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

    <Button
        android:id="@+id/startSessionButton"
        android:layout_width="87dp"
        android:layout_height="105dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="45dp"
        android:onClick="onStartSessionClick"
        android:text="Start Session"
        app:layout_constraintEnd_toStartOf="@+id/student_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>